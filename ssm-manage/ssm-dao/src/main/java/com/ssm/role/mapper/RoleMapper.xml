<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.role.mapper.RoleMapper">

    <resultMap id="queryMap" type="com.ssm.role.domain.RoleInfo">
        <id property="id" column="id"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
    </resultMap>
    <select id="getRoleList" parameterType="com.ssm.user.domain.User" resultMap="queryMap">
        select id,role_name,user_id from t_role_info where user_id = #{id}
    </select>

</mapper>